package-as: AtlasLoot

manual-changelog:
    filename: AtlasLoot/Documentation/Release_Notes.txt
    markup-type: plain
    
license-output: AtlasLoot/Documentation/LICENSE.txt

enable-nolib-creation: yes

externals:
# Git
    AtlasLoot/Libs/LibDataBroker-1.1: 
        url: https://repos.wowace.com/wow/libdatabroker-1-1
# SVN
    AtlasLoot/Libs/CallbackHandler-1.0: 
        url: https://repos.wowace.com/wow/callbackhandler/trunk/CallbackHandler-1.0
# AceGUI is only needed in development mode
#    AtlasLoot/Libs/AceGUI-3.0: 
#        url: https://repos.wowace.com/wow/ace3/trunk/AceGUI-3.0
    AtlasLoot/Libs/LibStub: 
        url: https://repos.wowace.com/wow/libstub/trunk
    AtlasLoot/Libs/LibSharedMedia-3.0: 
        url: https://repos.wowace.com/wow/libsharedmedia-3-0/trunk/LibSharedMedia-3.0
    AtlasLoot/Libs/LibDBIcon-1.0: 
        url: https://repos.wowace.com/wow/libdbicon-1-0/trunk/LibDBIcon-1.0
    AtlasLoot/Libs/LibBabble-Boss-3.0: 
        url: https://repos.wowace.com/wow/libbabble-boss-3-0/trunk
    AtlasLoot/Libs/LibBabble-Faction-3.0: 
        url: https://repos.wowace.com/wow/libbabble-faction-3-0/trunk
    AtlasLoot/Libs/LibBabble-ItemSet-3.0: 
        url: https://repos.wowace.com/wow/libbabble-itemset-3-0/trunk
# HG
    AtlasLoot/Libs/LibDialog-1.0: 
        url: https://repos.wowace.com/wow/libdialog-1-0

# Ignore takes place before folder's moving takes place
ignore:
    - AtlasLoot/AtlasLoot/Images/PSD
    - AtlasLoot/AtlasLoot/DEVTOOLS.lua
    - AtlasLoot/AtlasLoot/Libs/AceGUI-3.0

move-folders:
    AtlasLoot/AtlasLoot: AtlasLoot
    AtlasLoot/AtlasLoot_Classic: AtlasLoot_Classic
    AtlasLoot/AtlasLoot_BurningCrusade: AtlasLoot_BurningCrusade
    AtlasLoot/AtlasLoot_WrathoftheLichKing: AtlasLoot_WrathoftheLichKing
    AtlasLoot/AtlasLoot_Cataclysm: AtlasLoot_Cataclysm
    AtlasLoot/AtlasLoot_MistsofPandaria: AtlasLoot_MistsofPandaria
    AtlasLoot/AtlasLoot_WarlordsofDraenor: AtlasLoot_WarlordsofDraenor
    AtlasLoot/AtlasLoot_Legion: AtlasLoot_Legion
    AtlasLoot/AtlasLoot_Collections: AtlasLoot_Collections
    AtlasLoot/AtlasLoot_Crafting: AtlasLoot_Crafting
    AtlasLoot/AtlasLoot_Factions: AtlasLoot_Factions
    AtlasLoot/AtlasLoot_PvP: AtlasLoot_PvP
    AtlasLoot/AtlasLoot_WorldEvents: AtlasLoot_WorldEvents
    AtlasLoot/AtlasLoot_Options: AtlasLoot_Options

